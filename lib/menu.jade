doctype html
html(lang="en")
  head
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(charset="utf-8")
    meta(name="description" content="Lunch")
    meta(name="robots" content="index, nofollow")
    meta(name="mobileoptimized" content="0")
    meta(name="viewport" content="width=device-width,initial-scale=1,user-scalable=no")
    meta(name="apple-mobile-web-app-capable" content="yes")

    title= title

    link(href="main.css" rel="stylesheet" type="text/css")
  body
    if logo
      img(class="lunch-logo" src=logo align="right")
    h1= title
    h2
      | Vecka&nbsp;&mdash;&nbsp;
      = week
    table
      if !isMultiLanguage
        each day in days
          tr
            th= day.title
          each item in day.menu
            tr
              td= item
      else
        each day in days
          tr
            th(colspan=languages.length)= day.title
          tr
            each item in day.menu
              tr
                each translatedItem in item
                  td= translatedItem
